<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".TrafficfineActivity2">



    <ImageButton
        android:id="@+id/backbtn"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:background="@android:color/transparent"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/left1" />

    <TextView
        android:id="@+id/textView29"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Traffic Fine "
        android:textSize="26sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:gravity="center"
        android:layout_marginTop="-40dp"
        android:paddingBottom="20dp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">



    <TextView
        android:id="@+id/textView31"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Enter Vehicle Number"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_marginTop="20dp" />

    <EditText
        android:id="@+id/entervehicle"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text=""
        android:inputType="text"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:background="#EFE8E8"
        android:padding="10dp"
        android:layout_marginTop="10dp" />


    <TextView
        android:id="@+id/vehicleimage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Upload Vehicle Image"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_marginTop="20dp" />


    <ImageButton
        android:id="@+id/btnCapturePhoto"
        android:layout_width="73dp"
        android:layout_height="79dp"
        android:contentDescription="Capture Photo"
        android:src="@drawable/baseline_camera_alt_24" />

    <RadioButton
        android:id="@+id/radiobutton1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="No Driving License	₹5,000"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_marginTop="20dp" />

    <RadioButton
        android:id="@+id/radiobutton2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Expired DL	₹500 "
        android:textSize="20sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_marginTop="20dp" />

    <RadioButton
        android:id="@+id/radiobutton3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="No RC or fake RC ₹10,000"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_marginTop="20dp" />

    <RadioButton
        android:id="@+id/radiobutton4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="No Insurance ₹4,000 (repeat)"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_marginTop="20dp" />

    <RadioButton
        android:id="@+id/radiobutton5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="No PUC Certificate	₹10,000"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_marginTop="20dp" />
    <RadioButton
        android:id="@+id/radiobutton6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Over-speeding	₹1,000 "
        android:textSize="20sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_marginTop="20dp" />
    <RadioButton
        android:id="@+id/radiobutton7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Drunk driving	₹10,000 + jail (up to 6 months)"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_marginTop="20dp" />
    <RadioButton
        android:id="@+id/radiobutton8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Signal jumping ₹5,000"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_marginTop="20dp" />

    <RadioButton
        android:id="@+id/radiobutton9"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Rash/Dangerous driving	₹5,000 + license seizure"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_marginTop="20dp" />

    <RadioButton
        android:id="@+id/radiobutton10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Overloading (passenger or goods)	₹2,000 "
        android:textSize="20sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_marginTop="20dp" />

    <RadioButton
        android:id="@+id/radiobutton11"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Riding without helmet	₹500"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_marginTop="20dp" />

    <RadioButton
        android:id="@+id/radiobutton12"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Driving without seatbelt	₹1,000"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_marginTop="20dp" />

    <RadioButton
        android:id="@+id/radiobutton13"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Using mobile while driving	₹5,000"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_marginTop="20dp" />

    <RadioButton
        android:id="@+id/radiobutton14"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Triple riding on two-wheeler	₹1,000"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_marginTop="20dp" />

    <RadioButton
        android:id="@+id/radiobutton15"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Fancy/unreadable number plate	₹1,000"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_marginTop="20dp" />

    <RadioButton
        android:id="@+id/radiobutton16"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Modified silencer / loud exhaust ₹5,000"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_marginTop="20dp" />

    <RadioButton
        android:id="@+id/radiobutton17"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tinted glass beyond limit	₹1,000"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_marginTop="20dp" />

    <RadioButton
        android:id="@+id/radiobutton18"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Wrong side driving	₹2,000"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_marginTop="20dp" />

    <RadioButton
        android:id="@+id/radiobutton19"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Illegal parking	₹1,000"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_marginTop="20dp" />

    <RadioButton
        android:id="@+id/radiobutton20"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Underage driving	₹25,000 + jail + vehicle seizure"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_marginTop="20dp" />

    <RadioButton
        android:id="@+id/radiobutton21"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Not giving way to emergency vehicles	₹10,000"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_marginTop="20dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Traffic Fine Calculate "
        android:textSize="26sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        />


    <EditText
        android:id="@+id/fine"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""/>




    <Button
        android:id="@+id/submitfine"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Submit"
        android:layout_gravity="center"
        android:layout_marginTop="20dp" />
        </LinearLayout>
    </ScrollView>





</LinearLayout>